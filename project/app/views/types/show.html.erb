<% content_for :title, "类型详情" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- 通知信息 -->
      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4>类型详情</h4>
        </div>
        <div class="card-body">
          <p class="mb-3">
            <strong>名称：</strong>
            <%= @type.name %>
          </p>

          <p class="mb-3">
            <strong>稀有度：</strong>
            <%= @type.rarity %>
          </p>

          <p class="mb-3">
            <strong>该类型下的商品：</strong>
            <%= (@type.products.collect { |product| product.name }).join(", ") %>
          </p>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <div>
            <%= link_to "编辑该类型", edit_type_path(@type), class: "btn btn-secondary me-2" %>
            <%= link_to "返回类型列表", types_path, class: "btn btn-secondary" %>
          </div>
          <div>
            <%= button_to "删除该类型", @type, method: :delete, data: { confirm: "确定要删除此类型吗？" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>