<% content_for :title, "尺寸列表" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- 通知信息 -->
      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <h1 class="mb-4">尺寸列表</h1>

      <div id="sizes">
        <% if @sizes.any? %>
          <% @sizes.each do |size| %>
            <%= render size %>
          <% end %>
        <% else %>
          <p class="text-muted">暂无尺寸。</p>
        <% end %>
      </div>

      <!-- 添加新尺寸按钮 -->
      <div class="text-center mt-4">
        <%= link_to "新建尺寸", new_size_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>