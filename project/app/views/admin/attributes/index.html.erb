<!-- 引入 Font Awesome 图标库 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<h1 class="mb-4 text-center">商品属性管理</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <p class="text-center">在此页面，您可以管理商品的四个属性：</p>

      <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">
        <!-- 管理颜色 -->
        <div class="col">
          <div class="card h-100 border-primary">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
              <i class="fas fa-palette fa-3x mb-3 text-primary"></i>
              <h5 class="card-title">管理颜色</h5>
              <p class="card-text">点击这里管理商品的颜色属性。</p>
              <%= link_to '管理颜色', colors_path, class: 'btn btn-primary w-100 mt-auto' %>
            </div>
          </div>
        </div>

        <!-- 管理大小 -->
        <div class="col">
          <div class="card h-100 border-success">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
              <i class="fas fa-ruler-combined fa-3x mb-3 text-success"></i>
              <h5 class="card-title">管理大小</h5>
              <p class="card-text">点击这里管理商品的大小属性。</p>
              <%= link_to '管理大小', sizes_path, class: 'btn btn-success w-100 mt-auto' %>
            </div>
          </div>
        </div>

        <!-- 管理款式 -->
        <div class="col">
          <div class="card h-100 border-warning">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
              <i class="fas fa-tshirt fa-3x mb-3 text-warning"></i>
              <h5 class="card-title">管理款式</h5>
              <p class="card-text">点击这里管理商品的款式属性。</p>
              <%= link_to '管理款式', designs_path, class: 'btn btn-warning w-100 mt-auto' %>
            </div>
          </div>
        </div>

        <!-- 管理类型 -->
        <div class="col">
          <div class="card h-100 border-info">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
              <i class="fas fa-list-ul fa-3x mb-3 text-info"></i>
              <h5 class="card-title">管理类型</h5>
              <p class="card-text">点击这里管理商品的类型属性。</p>
              <%= link_to '管理类型', types_path, class: 'btn btn-info w-100 mt-auto' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>