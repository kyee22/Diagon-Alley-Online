<h2 class="text-center mb-4 text-primary">我的收藏夹</h2>

<div class="table-responsive">
  <table class="table table-striped table-bordered text-center mx-auto">
    <thead class="thead-dark">
    <tr>
      <th scope="col">商品名称</th>
      <th scope="col">价格</th>
      <th scope="col">查看</th>
      <th scope="col">移除</th>
    </tr>
    </thead>
    <tbody>
    <% @favorite_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %> 魔法币</td>
        <td>
          <%= link_to '查看', product_path(product), class: 'btn btn-outline-info btn-sm' %>
        </td>
        <td>
          <%= button_to '从收藏夹移除', unfavorite_product_favorite_path(product),
                        method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: "你确定要从收藏夹移除这个产品吗?" },
                        class: 'btn btn-outline-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>