<!-- 通知信息 -->
<% if notice.present? %>
  <div class="alert alert-success mt-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<!-- 设置页面标题 -->
<% content_for :title, "商品列表" %>

<h1 class="mb-4">商品列表</h1>

<!-- 直接按顺序显示所有商品 -->
<% @products.each do |product| %>
  <%= render partial: 'products/product', locals: { product: product } %>
<% end %>

</div>