<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Sales:</strong>
    <%= product.sales %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= "#{product.color.name} (RGB:#{product.color.code} 透明度:#{product.color.opacity})"%>
  </p>

  <p>
    <strong>Type:</strong>
    <%= "#{product.type.name} (稀有度: #{product.type.rarity})" %>
  </p>

  <p>
    <strong>大小</strong>
    <%= product.size.name %>
  </p>

  <p>
    <strong>款式</strong>
    <%= product.design.name %>
  </p>

  <% if product.image.attached? %>
    <%= image_tag product.image %>
  <% else %>
    <p>暂无图片😰</p>
  <% end %>
  <br/>
  <% if current_user %>
    <% if current_user.favorite_products.include?(product) %>
      <%= button_to '从收藏夹移除', unfavorite_product_favorite_path(product), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= button_to '添加到收藏夹', favorite_product_favorite_path(product), method: :post, class: 'btn btn-primary' %>
    <% end %>

    <!-- 添加加入购物车的按钮 -->
    <%= button_to '加入购物车', product_cart_items_path(product), method: :post, class: 'btn btn-success' %>
  <% end %>
</div>
