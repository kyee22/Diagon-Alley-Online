<!-- 通知信息 -->
<% if notice.present? %>
  <div class="alert alert-success mt-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<!-- 设置页面标题 -->
<% content_for :title, @product.name %>

<!-- 渲染 _product 局部视图 -->
<div id="<%= dom_id @product %>" class="container">
  <%= render partial: 'products/product', locals: { product: @product } %>
</div>

<!-- 最下方的按钮 -->
<div class="mt-3 text-center">
  <%= link_to "返回首页", root_path, class: 'btn btn-outline-primary btn-sm' %>
</div>