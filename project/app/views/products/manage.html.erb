<p style="color: green"><%= notice %></p>

<% content_for :title, "管理商品" %>

<h1>管理商品</h1>

<!-- 最下方的按钮 -->
<div class="mt-3 text-center">
  <% if current_user && current_user.role == 'admin' %>
    <%= link_to "添加新商品", new_product_path, class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
  <% end %>
</div>
