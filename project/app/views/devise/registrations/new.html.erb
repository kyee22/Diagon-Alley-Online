<h2 class="text-center mb-4">注册</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'container w-50' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "邮箱", class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "密码", class: 'form-label' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(密码最少需要 <%= @minimum_password_length %> 个字符)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "确认密码", class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "注册", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= link_to "登录", new_session_path(resource_name), class: 'text-decoration-none text-secondary' %>
</div>