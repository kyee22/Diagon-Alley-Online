<h2 class="text-center mb-4">登录</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'container w-50' }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, "邮箱", class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "密码", class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, "记住密码", class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="d-grid gap-2">
    <%= f.submit "登录", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= link_to "注册", new_registration_path(resource_name), class: 'text-decoration-none text-secondary' %><br/>
  <%= link_to "忘记密码？请联系管理员", "mailto:kyee22@buaa.edu.cn?subject=忘记密码帮助", class: 'text-decoration-none text-secondary' %><br />
</div>